@model MSJennings.PersonalFinance.WebApp.ViewModels.Transactions.EditTransactionViewModel

@{
    ViewData["Title"] = "Edit Transaction";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Date"></label>
        <input type="date" class="form-control" asp-for="Date" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="Model.CategoriesList"></select>
    </div>

    <div class="form-group">
        <label asp-for="Memo"></label>
        <textarea class="form-control" asp-for="Memo"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input type="number" step="0.01" class="form-control" asp-for="Amount" />
    </div>

    <div class="form-group">
        <label asp-for="IsCredit"></label>
        <input type="checkbox" class="form-control" asp-for="IsCredit" />
    </div>

    <input type="submit" value="Save" />
    <a asp-action="Index">Cancel</a>
</form>
