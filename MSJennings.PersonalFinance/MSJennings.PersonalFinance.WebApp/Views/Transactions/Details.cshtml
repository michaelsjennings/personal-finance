@model MSJennings.PersonalFinance.WebApp.ViewModels.Transactions.TransactionDetailsViewModel

@{
    ViewData["Title"] = "Transaction Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Date"></label>
        <input type="date" readonly class="form-control-plaintext" asp-for="Date" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryName"></label>
        <input type="text" readonly class="form-control-plaintext" asp-for="CategoryName" />
    </div>

    <div class="form-group">
        <label asp-for="Memo"></label>
        <textarea readonly class="form-control-plaintext" asp-for="Memo"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input type="number" readonly step="0.01" class="form-control-plaintext" asp-for="Amount" />
    </div>

    <div class="form-group">
        <label asp-for="IsCredit"></label>
        <input type="text" readonly class="form-control-plaintext" asp-for="IsCredit" />
    </div>

    <a asp-action="Index">Ok</a>
</div>